---
import Layout from "../../layouts/Layout.astro";
import BlogCard from "../../components/BlogCard.astro";
import {
    getCategories,
    getPostsByCategory,
    stripHtml,
    type WPCategory,
} from "../../lib/wordpress";

export async function getStaticPaths() {
    const categories = await getCategories();
    return categories.map((category) => ({
        params: { slug: category.slug },
        props: { category },
    }));
}

interface Props {
    category: WPCategory;
}

const { category } = Astro.props;
const wpPosts = await getPostsByCategory(category.slug);

const posts = wpPosts.map((post) => {
    const date = new Date(post.date).toLocaleDateString("en-GB", {
        day: "numeric",
        month: "short",
        year: "numeric",
    });

    return {
        title: post.title,
        excerpt: stripHtml(post.excerpt),
        date: date,
        icon: "üìÇ",
        mood: "coffee-morning",
        image: post.featured_image,
        href: `/post/${post.slug}`,
        category: category.name,
    };
});
---

<Layout title={`${category.name} - Lynn The Storyteller`}>
    <main>
        <header class="category-header">
            <div class="container">
                <span class="category-label">Category</span>
                <h1 class="category-title">{category.name}</h1>
                {
                    category.description && (
                        <p class="category-description">
                            {category.description}
                        </p>
                    )
                }
            </div>
        </header>

        <section class="posts-section">
            <div class="container">
                {
                    posts.length > 0 ? (
                        <div class="posts-grid animate-fade-in delay-200">
                            {posts.map((post) => (
                                <BlogCard {...post} />
                            ))}
                        </div>
                    ) : (
                        <div class="empty-state animate-fade-in">
                            <p>Ch∆∞a c√≥ b√†i vi·∫øt n√†o trong danh m·ª•c n√†y.</p>
                            <a href="/" class="btn-primary mt-md">
                                Quay v·ªÅ trang ch·ªß
                            </a>
                        </div>
                    )
                }
            </div>
        </section>
    </main>
</Layout>

<style>
    .category-header {
        padding: var(--space-3xl) 0 var(--space-2xl);
        text-align: center;
        background: linear-gradient(
            to bottom,
            var(--color-bg-subtle) 0%,
            var(--color-bg-page) 100%
        );
        margin-bottom: var(--space-2xl);
    }

    .category-label {
        font-family: var(--font-mono);
        font-size: 0.875rem;
        color: var(--color-primary);
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: var(--space-md);
        display: block;
    }

    .category-title {
        font-size: 3rem;
        margin-bottom: var(--space-md);
        color: var(--color-text-main);
    }

    .category-description {
        font-size: 1.125rem;
        max-width: 600px;
        margin: 0 auto;
        color: var(--color-text-muted);
        line-height: 1.6;
    }

    .posts-section {
        padding-bottom: var(--space-3xl);
    }

    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: var(--space-xl);
    }

    .empty-state {
        text-align: center;
        padding: var(--space-3xl) 0;
        color: var(--color-text-muted);
    }

    .mt-md {
        margin-top: var(--space-md);
    }

    @media (max-width: 768px) {
        .category-title {
            font-size: 2rem;
        }

        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

	<main>
		<!-- Hero Section -->
		<Hero />

		<!-- Posts Grid -->
		<section class="posts-section">
			<div class="container">
				<div class="posts-grid animate-fade-in delay-200">
					{posts.map((post) => <BlogCard {...post} />)}

---
import Layout from "../layouts/Layout.astro";
import BlogCard from "../components/BlogCard.astro";
import SubscribeForm from "../components/SubscribeForm.astro";

import { getPosts, stripHtml } from "../lib/wordpress";

const wpPosts = await getPosts();

const posts = wpPosts.map((post) => {
	const date = new Date(post.date).toLocaleDateString("en-GB", {
		day: "numeric",
		month: "short",
		year: "numeric",
	});

	// Try to find a category to use as a tag
	const category = Object.values(post.categories)[0]?.name || "Blog";

	return {
		title: post.title,
		excerpt: stripHtml(post.excerpt),
		date: date,
		icon: "üìù", // Default icon
		mood: "coffee-morning", // Default mood
		image:
			post.featured_image ||
			"https://images.unsplash.com/photo-1497935586351-b67a49e012bf?auto=format&fit=crop&w=800&q=80",
		href: `/post/${post.slug}`,
		category: category,
	};
});

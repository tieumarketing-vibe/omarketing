<style>
    .floral-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        overflow: hidden;
    }

    .floral-decoration {
        position: absolute;
        opacity: 0.6;
        color: var(--color-primary-light);
        transition:
            color 0.3s ease,
            opacity 0.3s ease;
    }

    [data-theme="dark"] .floral-decoration {
        opacity: 0.15;
        color: var(--color-primary);
    }

    .top-left {
        top: -5%;
        left: -5%;
        width: 40vw;
        max-width: 400px;
        transform: rotate(45deg);
        filter: blur(40px);
    }

    .bottom-right {
        bottom: -10%;
        right: -5%;
        width: 50vw;
        max-width: 500px;
        transform: rotate(-15deg);
        filter: blur(50px);
    }

    .middle-right {
        top: 30%;
        right: -20px;
        width: 150px;
        height: 300px;
        opacity: 0.2;
        transform: rotate(-10deg);
        display: none; /* Only show on larger screens maybe */
    }

    @media (min-width: 1024px) {
        .middle-right {
            display: block;
        }

        .top-left {
            width: 30vw;
            filter: blur(60px);
        }

        .bottom-right {
            width: 35vw;
            filter: blur(70px);
        }
    }
</style>

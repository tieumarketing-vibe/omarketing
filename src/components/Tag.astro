---
// Tag Component - Notion style
export interface Props {
    name: string;
    color?: "blue" | "purple" | "pink" | "orange" | "green" | "gray";
    href?: string;
}

const { name, color = "gray", href } = Astro.props;
const TagElement = href ? "a" : "span";
---

<TagElement href={href} class={`tag tag-${color}`}>
    {name}
</TagElement>

<style>
    .tag {
        display: inline-flex;
        align-items: center;
        padding: 4px 8px;
        border-radius: var(--radius-sm);
        font-size: var(--text-xs);
        font-weight: 500;
        transition: all var(--transition-fast);
        text-decoration: none;
        cursor: default;
    }

    a.tag {
        cursor: pointer;
    }

    a.tag:hover {
        transform: translateY(-1px);
        box-shadow: var(--shadow-sm);
    }

    /* Color variants */
    .tag-blue {
        background-color: rgba(35, 131, 226, 0.1);
        color: var(--color-accent-blue);
    }

    .tag-purple {
        background-color: rgba(144, 101, 176, 0.1);
        color: var(--color-accent-purple);
    }

    .tag-pink {
        background-color: rgba(224, 62, 142, 0.1);
        color: var(--color-accent-pink);
    }

    .tag-orange {
        background-color: rgba(217, 115, 13, 0.1);
        color: var(--color-accent-orange);
    }

    .tag-green {
        background-color: rgba(15, 123, 108, 0.1);
        color: var(--color-accent-green);
    }

    .tag-gray {
        background-color: var(--color-bg-secondary);
        color: var(--color-text-secondary);
    }
</style>

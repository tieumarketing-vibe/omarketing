---
interface Props {
	title?: string;
}

const { title = "My Notion-Style Blog" } = Astro.props;
import LeftNav from "../components/LeftNav.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import FloralBackground from "../components/FloralBackground.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="vi">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Chào bạn, mình là Lynn _ Người sẽ dẫn dắt bạn trong những phút tới đây vào thế giới của những câu chuyện Một, Đôi, Ba, Tứ."
		/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/jpeg" href="/images/profile.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Outfit:wght@500;700;800&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body>
		<LeftNav />
		<FloralBackground />
		<ThemeToggle />
		<slot />
	</body>
</html>
